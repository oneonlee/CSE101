    body {
        height: 75vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

    #header {
        margin-bottom: 50px;
    }

    h1 {
        justify-content: center;
        text-align: center;
    }

    .frame {
        border-radius: 15px;
